<%layout("/layouts/boilerplate")%>

<div class="container mt-5">
    <h2 class="text-center mb-4">Available Rooms</h2>
    <div class="row">

        <!-- Room 1 -->
        <div class="col-md-4 mt-5">
            <div class="card h-100" style="background: linear-gradient(45deg, #B2EBF2, #81D4FA);">
                <img src="https://images.unsplash.com/photo-1611892440504-42a792e24d32?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img-top img-fluid" alt="Room 1" style="height: 200px;">
                <div class="card-body">
                    <h5 class="card-title">Deluxe Suite</h5>
                    <p class="card-text">A luxurious room with a king-size bed, modern amenities, and a breathtaking view. Perfect for a relaxing stay.</p>
                    <p class="card-text"><strong>Capacity:</strong> 2 guests</p>
                    <p class="card-text"><strong>Price:</strong> $150 per night</p>
                    <a href="/bookstay">
                        <button type="button" class="btn btn-primary">Book Now</button>
                    </a>
                    
                </div>
            </div>
        </div>

        <!-- Room 2 -->
        <div class="col-md-4 mt-5">
            <div class="card h-100" style="background: linear-gradient(45deg, #B2EBF2, #81D4FA);">
                <img src="https://media.istockphoto.com/id/1453121684/photo/modern-hotel-room-with-double-bed-night-tables-and-day-sofa-bed.jpg?s=2048x2048&w=is&k=20&c=2uyZLp-B5iORDO1erbUzsY6_55JDOkRn5ujtU5yfeOA=" class="card-img-top img-fluid" alt="Room 2" style="height: 200px;">
                <div class="card-body">
                    <h5 class="card-title">Executive Suite</h5>
                    <p class="card-text">Spacious and well-appointed, the Executive Suite offers a comfortable stay with additional amenities and services.</p>
                    <p class="card-text"><strong>Capacity:</strong> 3 guests</p>
                    <p class="card-text"><strong>Price:</strong> $200 per night</p>
                    <a href="/bookstay">
                        <button type="button" class="btn btn-primary">Book Now</button>
                    </a>
                    
                </div>
            </div>
        </div>

        <!-- Room 3 -->
        <div class="col-md-4 mt-5">
            <div class="card h-100" style="background: linear-gradient(45deg, #B2EBF2, #81D4FA);">
                <img src="https://images.unsplash.com/photo-1618773928121-c32242e63f39?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img-top img-fluid" alt="Room 3" style="height: 200px;">
                <div class="card-body">
                    <h5 class="card-title">Family Suite</h5>
                    <p class="card-text">Ideal for families, the Family Suite provides a spacious and comfortable environment with separate sleeping areas.</p>
                    <p class="card-text"><strong>Capacity:</strong> 4 guests</p>
                    <p class="card-text"><strong>Price:</strong> $250 per night</p>
                    <a href="/bookstay">
                        <button type="button" class="btn btn-primary">Book Now</button>

                    </a>
                </div>
            </div>
        </div>

    </div>
</div>
