<%layout("/layouts/boilerplate")%>

<div class="container mt-5">
    <h2 class="text-center mb-4">Book Your Stay</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form class="row g-3 needs-validation" action="/confirm-booking" method="post" novalidate>
                <div class="col-md-6">
                    <label for="guest-name" class="form-label">Guest Name:</label>
                    <input type="text" id="guest-name" name="guest-name" class="form-control" required>
                    <div class="invalid-feedback">Please enter your guest name.</div>
                </div>

                <div class="col-md-6">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" id="email" name="email" class="form-control" required>
                    <div class="invalid-feedback">Please enter a valid email address.</div>
                </div>

                <div class="col-md-6">
                    <label for="phone" class="form-label">Phone:</label>
                    <div class="input-group has-validation">
                        <span class="input-group-text" id="inputGroupPrepend">+91</span>
                        <input type="tel" class="form-control" id="phone" name="phone" aria-describedby="inputGroupPrepend" required pattern="[0-9]{10}">
                        <div class="invalid-feedback">Please enter a valid 10-digit phone number.</div>
                    </div>
                </div>

                <div class="col-md-6">
                    <label for="check-in-date" class="form-label">Check-in Date:</label>
                    <input type="date" id="check-in-date" name="check-in-date" class="form-control" required>
                    <div class="invalid-feedback">Please provide a valid check-in date.</div>
                </div>

                <div class="col-md-6">
                    <label for="check-out-date" class="form-label">Check-out Date:</label>
                    <input type="date" id="check-out-date" name="check-out-date" class="form-control" required>
                    <div class="invalid-feedback" id="date-error">Check-out date must be after the check-in date.</div>
                </div>

                <div class="col-md-12">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                        <label class="form-check-label" for="invalidCheck">Agree to terms and conditions</label>
                        <div class="invalid-feedback">You must agree before submitting.</div>
                    </div>
                </div>

                <div class="col-md-12">
                    <button class="btn btn-primary" type="submit" onclick="return submitted()">Submit Booking</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function validateBookingForm() {
        var checkInDate = document.getElementById('check-in-date').value;
        var checkOutDate = document.getElementById('check-out-date').value;

        // Check if check-out date is after check-in date
        if (checkOutDate <= checkInDate) {
            document.getElementById('date-error').style.display = 'block';
            return false;
        } else {
            document.getElementById('date-error').style.display = 'none';
            return true;
        }
    }

    function submitted() {
        if (validateBookingForm()) {
            alert("Booking Done");
            return true;
        } else {
            alert("Please fill in all the required fields and ensure the check-out date is after the check-in date.");
            return false; // Prevent form submission
        }
    }
</script>
